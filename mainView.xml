<?xml version="1.0"?>
<view icon="25984" title="TownCrier" width="600" height="450">
  <control progid="DecalControls.Notebook" name="nbMain">
    
    <page label="Actions">
      <control progid="DecalControls.FixedLayout" clipped="">
        <control progid="DecalControls.StaticText" name="txtEventsEvent" left="5" top="10" width="60" height="18" text="Event" />
        <control progid="DecalControls.Choice" name="chcEventsEvent" left="80" top="10" width="140" height="18" />
        <control progid="DecalControls.StaticText" name="txtEventsWebhook" left="5" top="30" width="60" height="18" text="Webhook" />
        <control progid="DecalControls.Choice" name="chcEventsWebhook" left="80" top="30" width="140" height="18" />
        <control progid="DecalControls.PushButton" name="btnEventsEventAdd" left="5" top="50" width="100" height="18" text="Add Action" />

        <control progid="DecalControls.List" name="lstActions" left="5" top="80" width="590" height="200">
          <column progid="DecalControls.StaticText" name="colA" fixedwidth="100" /><!-- Event -->
          <column progid="DecalControls.StaticText" name="colB" fixedwidth="100" /><!-- Webhook -->
          <column progid="DecalControls.TextColumn" name="colC" fixedwidth="40" /><!-- Test -->
          <column progid="DecalControls.TextColumn" name="colC" fixedwidth="40" /><!-- Delete -->
        </control>
      </control>
    </page>

    <page label="Timers">
      <control progid="DecalControls.FixedLayout" clipped="">
        <control progid="DecalControls.StaticText" name="txtTimersMinutes" left="5" top="10" width="60" height="18" text="Every" />
        <control progid="DecalControls.Edit" name="edtTimersMinutes" left="80" top="10" width="40" height="18" />
        <control progid="DecalControls.StaticText" name="txtTimersMinutes" left="130" top="10" width="60" height="18" text="minute(s)" />
        <control progid="DecalControls.StaticText" name="txtTimersWebhook" left="5" top="30" width="60" height="18" text="Webhook" />
        <control progid="DecalControls.Choice" name="chcTimersWebhook" left="80" top="30" width="140" height="18" />
        <control progid="DecalControls.StaticText" name="txtTimersMessage" left="5" top="50" width="535" height="18" text="Message" />
        <control progid="DecalControls.Edit" name="edtTimersMessage" left="80" top="50" width="100" height="18" />
        <control progid="DecalControls.StaticText" name="txtTimersMinutes" left="190" top="50" width="200" height="18" text="See Variables, below, for usage" />

        <control progid="DecalControls.PushButton" name="btnTimersTimerAdd" left="5" top="80" width="100" height="18" text="Add Timer" />

        <control progid="DecalControls.List" name="lstTimers" left="5" top="100" width="590" height="200">
          <column progid="DecalControls.StaticText" name="colA" fixedwidth="40" />
          <!-- Minutes -->
          <column progid="DecalControls.StaticText" name="colB" fixedwidth="100" />
          <!-- Webhook -->
          <column progid="DecalControls.StaticText" name="colC" fixedwidth="300" />
          <!-- Message -->
          <column progid="DecalControls.TextColumn" name="colD" fixedwidth="40" />
          <!-- Test -->
          <column progid="DecalControls.TextColumn" name="colE" fixedwidth="40" />
          <!-- Delete -->
        </control>

        <control progid="DecalControls.StaticText" name="txtTimersVariables" left="10" top="310" width="590" height="100" text="In your Message, you can make use of special variables to send yourself information about your character. Each variable starts with a $. Available variables are $NAME, $LEVEL, $UXP (unassigned xp), $TXP (total XP), $HEALTH, $STAMINA, $MANA, and $VITAE. Example: Hello, $NAME." />

      </control>
    </page>

    <page label="Webhooks">
      <control progid="DecalControls.FixedLayout" clipped="">
        <control progid="DecalControls.StaticText" name="txtName" left="5" top="10" width="60" height="18" text="Name" />
        <control progid="DecalControls.Edit" name="edtName" left="60" top="10" width="100" height="18" />
        <control progid="DecalControls.StaticText" name="txtURL" left="5" top="30" width="60" height="18" text="URL" />
        <control progid="DecalControls.Edit" name="edtURL" left="60" top="30" width="535" height="18" />
        <control progid="DecalControls.StaticText" name="txtMethod" left="5" top="50" width="160" height="18" text="Method" />
        <control progid="DecalControls.Choice" name="chcMethod" left="60" top="50" width="60" height="18" />
        <control progid="DecalControls.StaticText" name="txtPayload" left="5" top="70" width="160" height="18" text="Payload" />
        <control progid="DecalControls.Edit" name="edtPayload" left="60" top="70" width="535" height="18" />
        <control progid="DecalControls.PushButton" name="btnWebhookAdd" left="5" top="90" width="100" height="18" text="Add Webhook" />

        <control progid="DecalControls.List" name="lstWebhooks" left="5" top="130" width="590" height="200">
          <column progid="DecalControls.TextColumn" name="colA" fixedwidth="80" /> <!-- Name -->
          <column progid="DecalControls.TextColumn" name="colB" fixedwidth="160" /><!-- URL -->
          <column progid="DecalControls.TextColumn" name="colC" fixedwidth="40" /><!-- Method -->
          <column progid="DecalControls.TextColumn" name="colD" fixedwidth="160" /><!-- Payload -->
          <column progid="DecalControls.TextColumn" name="colE" fixedwidth="40" /><!-- Test -->
          <column progid="DecalControls.TextColumn" name="colC" fixedwidth="40" /><!-- Delete -->
        </control>
      </control>
    </page>

    <page label="Debug">
      <control progid="DecalControls.FixedLayout" clipped="">
        <control progid="DecalControls.PushButton" name="btnLoad" left="5" top="10" width="60" height="18" text="Load" />
        <control progid="DecalControls.PushButton" name="btnSave" left="100" top="10" width="60" height="18" text="Save" />
      </control>
    </page>
  </control>
</view>